@using Places.Models;

<h1>Places I have been</h1>
<ol>

@if (Model.Count == 0)
{
  <p>You have no items in your places youve been!</p>
}
@if(Model.Count != 0)
{
  @foreach (Place place in Model)
  {
    <li><a href='/places/@place.GetId()'>@place.GetCityName()</a></li>
  }
}

</ol>
<a href="/places/new">Add a new item from Item view.</a>
<form action="/places/delete" method="post">
  <button type="submit" name="button">Clear All Places</button>
</form>
